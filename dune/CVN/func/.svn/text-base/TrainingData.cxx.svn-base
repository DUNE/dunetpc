namespace cvn
{

  TrainingData::TrainingData(const InteractionType& interaction,
                             float nuEnergy, float lepEnergy,
                             const PixelMap& pMap):
  fInt(interaction),
  fNuEnergy(nuEnergy),
  fLepEnergy(lepEnergy),
  fPMap(pMap)
  {  }


  void TrainingData::FillOutputVector(float* output) const
  {
    for(unsigned int i = 0; i < kNIntType; ++i)
      output[i] = 0;

    output[fInt] = 1;



  }

  void TrainingData::FillSimpleOutputVector(float* output) const
  {
    for(unsigned int i = 0; i < kNSimpleNeutrinoType; ++i)
      output[i] = 0;

    SimpleNeutrinoType fSimpInt = GetSimpleNeutrinoType(fInt);

    output[fSimpInt] = 1;

  }

} // end namespace cvn
