BEGIN_PROLOG

#   This file defines the configuration for the CVNEventDump module

standard_cvnmapper:
{
  module_type:        CVNMapper
  #==================
  ClusterLabel:   "slicer"
  ProngModLabel:  "fuzzykvertex"
  Prong3DLabel:   "Prongs3D"
  Prong2DLabel:   "Prongs2D"
  ClusterPMLabel: "PMcluster"
  ProngPMLabel:   "PMprong"
  ObeyPreselection: false
  MinClusterHits: 15
  CellWidth:      80
  PlaneLength:    200
  MaxPlaneGap:    10

  MapProngs:      true
  UseGeV:         true 
}

mrbrem_cvnmapper:        @local::standard_cvnmapper
mrbrem_cvnmapper.ProngModLabel: "fuzzykvertexmrbrem"
mrbrem_cvnmapper.ClusterLabel:  "slicermrbrem"

mrcc_cvnmapper:        @local::standard_cvnmapper
mrcc_cvnmapper.ProngModLabel: "fuzzykvertexmrcc"
mrcc_cvnmapper.ClusterLabel:  "slicermrcc"

mre_cvnmapper:        @local::standard_cvnmapper
mre_cvnmapper.ProngModLabel: "fuzzykvertexmre"
mre_cvnmapper.ClusterLabel:  "slicermre"

END_PROLOG
