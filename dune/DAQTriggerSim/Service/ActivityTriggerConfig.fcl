activitytrigger: {
  service_provider: ActivityTriggerService

  minHits:     10   # minimum number of hits in an APA to produce a trigger
  threshold:   10   # minimum threshold for a hit
  minTicks:    3    # minimum number of ticks above threshold to be considered a hit
}

